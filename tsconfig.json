{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowUnreachableCode": true,
    "allowUnusedLabels": false,
    "alwaysStrict": false,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "sourceMap": true,
    "module": "ES2015",
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "paths": {
      "src": [
        "./src"
      ]
    },
    "noUnusedLocals": true,
    "target": "ES2015",
    "outDir": "./lib",
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./lib",
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom",
      "es2019"
    ]
  },
  "types": [
    "node",
    "jest",
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ],
}